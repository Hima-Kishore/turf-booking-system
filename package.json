{
  "name": "turf-booking-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:shared": "npm run dev --workspace=packages/shared-types",
    "dev": "concurrently -n \"backend,frontend,shared\" -c \"blue,green,yellow\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:shared\"",
    "build:shared": "npm run build --workspace=packages/shared-types",
    "build": "npm run build:shared && npm run build --workspaces",
    "prisma:studio": "npm run prisma:studio --workspace=apps/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
